    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine-ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": [
                "--config=jasmine.json",
                "examples/example.ts"
            ]
        } ,{
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "example"
            ],
            "port": 9229
        }
    ]
}